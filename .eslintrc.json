{
  "extends": [
    "react-app",
    "eslint:recommended"
  ],
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "no-extra-semi": [
      "error"
    ],
    "eqeqeq": [
      "error",
      "always"
    ],
    "quotes": [
      2,
      "single",
      {
	    "avoid-escape": true,
	    "allowTemplateLiterals": true
	  }
    ]
  }
}